             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="326.042" d:DesignWidth="320.834" 
             BorderThickness="4" Margin="3" Padding="3" Cursor="Hand">
